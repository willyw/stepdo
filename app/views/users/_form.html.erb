<%= f.label :email %><br />
<%= f.text_field :email, :class=>"text-form" %>
<%= show_error_on :email, user  %>
<br />
<%= f.label :password, f.object.new_record? ? nil : "Change password" %><br />
<%= f.password_field :password, :class =>"text-form" %>
<%= show_error_on :password, user  %>
<br />
<%= f.label :password_confirmation %><br />
<%= f.password_field :password_confirmation, :class =>"text-form" %>
<%= show_error_on :password_confirmation, user  %>